<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/valorant_dark_gray"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivEquippableIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/equippable_icon"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEquippableName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/valorant_red"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Equippable Name" />

            <TextView
                android:id="@+id/tvEquippableDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/valorant_white"
                android:textSize="14sp"
                tools:text="Equippable description goes here." />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 