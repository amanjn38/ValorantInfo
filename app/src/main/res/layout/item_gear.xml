<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/valorant_dark_gray"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvGearName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/valorant_red"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Gear Name" />

        <TextView
            android:id="@+id/tvGearDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/valorant_white"
            android:textSize="14sp"
            tools:text="Gear description goes here. This is a detailed explanation of what this gear does." />

        <TextView
            android:id="@+id/tvGearCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/valorant_red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="1000" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 